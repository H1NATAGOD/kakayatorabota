<Window xmlns="https://github.com/avaloniaui"
        Title="Вход в систему"
        Width="400" Height="500">
    <StackPanel Margin="40" Spacing="20">
        <TextBlock Text="Кафе Management System" 
                   FontSize="24" 
                   HorizontalAlignment="Center"
                   Margin="0,0,0,30"/>
        
        <Image Source="/Assets/logo.png" 
               Width="100" Height="100"
               HorizontalAlignment="Center"/>
        
        <StackPanel Spacing="10">
            <TextBlock Text="Логин:" FontWeight="Bold"/>
            <TextBox Text="{Binding Login}" 
                     Watermark="Введите логин"/>
            
            <TextBlock Text="Пароль:" FontWeight="Bold" Margin="0,10,0,0"/>
            <TextBox Text="{Binding Password}" 
                     PasswordChar="*"
                     Watermark="Введите пароль"/>
        </StackPanel>
        
        <Button Content="Войти" 
                Command="{Binding LoginCommand}"
                IsEnabled="{Binding !IsLoading}"
                HorizontalAlignment="Stretch"
                Height="40"
                Margin="0,20,0,0"/>
        
        <ProgressBar IsIndeterminate="True" 
                     IsVisible="{Binding IsLoading}"
                     Height="4"/>
        
        <TextBlock Text="{Binding ErrorMessage}"
                   Foreground="Red"
                   TextWrapping="Wrap"
                   HorizontalAlignment="Center"/>
    </StackPanel>
</Window>